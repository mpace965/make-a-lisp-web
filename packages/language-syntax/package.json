{
  "name": "language-syntax",
  "private": true,
  "version": "0.3.0",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsup src/"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": "esm",
    "sourcemap": true,
    "dts": {
      "compilerOptions": {
        "moduleResolution": "node"
      }
    }
  },
  "devDependencies": {
    "prettier": "^2.8.4",
    "tsup": "^6.6.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "immutable": "^4.2.4"
  }
}
